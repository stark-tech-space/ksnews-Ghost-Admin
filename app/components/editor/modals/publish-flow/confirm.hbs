<div class='gh-publish-title' data-test-publish-flow='confirm'>
  <div class='green'>{{t 'Manual.Posts.Ready,_set,_publish.'}}</div>
  <div>{{t 'Manual.Posts.Share_it_with_the_world.'}}</div>
</div>
<p class='gh-publish-confirmation' data-test-text='confirm-details'>
  {{#if @publishOptions.isScheduled}}
    {{#let (moment-site-tz @publishOptions.scheduledAtUTC) as |scheduledAt|}}
      {{t 'Manual.Posts.On'}}
      <strong>
        {{moment-format scheduledAt 'D MMM YYYY'}}
        {{t 'Manual.Posts.at'}}
        {{moment-format scheduledAt 'HH:mm'}}
      </strong>
      {{t 'Manual.Posts.your_'}}{{/let}}{{else}}{{t 'Manual.Posts.Your_'}}{{/if}}{{t
    (concat 'Manual.Posts.' @publishOptions.post.displayName)
  }}

  {{#if this.willPublish}}
    {{t 'Manual.Posts._will_be_published_on_your_site'}}{{#if this.willEmail}}{{t
        'Manual.Posts.,_and_delivered to'
      }}{{else}}.{{/if}}
  {{/if}}

  {{#if this.willEmail}}
    {{#unless this.willPublish}}
      {{t 'Manual.Posts.will_be_delivered_to'}}
    {{/unless}}

    {{#let
      (members-count-fetcher query=(hash filter=@publishOptions.fullRecipientFilter))
      as |countFetcher|
    }}
      <strong>
        {{if (eq @recipientType 'all') (t 'Manual.Posts.all')}}

        {{format-number countFetcher.count}}

        {{! @recipientType = none/free/paid/all/specific }}
        {{if (not-eq @recipientType 'all') @recipientType}}
      </strong>

      {{#if @publishOptions.onlyDefaultNewsletter}}
        <strong>{{t
            (concat
              'Manual.Posts.' (gh-pluralize countFetcher.count 'subscriber' without-count=true)
            )
          }}</strong>{{#if this.willPublish}}.{{else}},{{/if}}
      {{else}}
        <strong>{{gh-pluralize countFetcher.count 'subscriber' without-count=true}}</strong>
        {{t 'Manual.Posts.of'}}
        <strong>{{@publishOptions.newsletter.name}}</strong>{{#if
          this.willPublish
        }}.{{else}},{{/if}}
      {{/if}}
    {{/let}}

    {{#unless this.willPublish}}
      {{t 'Manual.Posts.and_will_'}}
      <strong>{{t 'Manual.Posts.not'}}</strong>
      {{t 'Manual.Posts._be_published_on_your_site.'}}
    {{/unless}}
  {{/if}}
</p>

{{#if this.errorMessage}}
  <p class='error gh-box gh-box-error mt3 mb3' data-test-confirm-error>
    {{this.errorMessage}}
  </p>
{{/if}}

<div class='gh-publish-cta'>
  <GhTaskButton
    @task={{this.confirmTask}}
    @buttonText={{this.confirmButtonText}}
    @runningText={{this.confirmRunningText}}
    @successText={{this.confirmSuccessText}}
    @class='gh-btn gh-btn-large'
    @idleClass='gh-btn-pulse'
    @runningClass='gh-btn-green gh-btn-icon'
    data-test-button='confirm-publish'
  />
  <button
    type='button'
    class='gh-btn gh-btn-link gh-btn-large gh-publish-cta-secondary'
    {{on 'click' @cancel}}
    data-test-button='back-to-options'
  >{{t 'Manual.Posts.Back_to_settings'}}</button>
</div>