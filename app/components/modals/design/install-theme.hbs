<div class='modal-content' data-test-modal='install-theme'>
  <div class='theme-validation-container'>
    <header class='modal-header'>
      <h1>{{if
          this.installSuccess
          (t 'Manual.Components.Success')
          (t 'Manual.Components.Install_theme')
        }}</h1>
    </header>
    <button
      type='button'
      class='close'
      title={{t 'Manual.Components.Close'}}
      {{on 'click' @close}}
    >{{svg-jar 'close'}}<span class='hidden'>Close</span></button>

    <div class='modal-body'>
      {{#if this.isConfirming}}
        <p data-test-state='confirm'>
          {{t 'Manual.Components.By_clicking_below,_'}}<strong>{{this.themeName}}</strong>{{t
            'Manual.Components._will_automatically_be_activated_as_the_theme_for_your_site.'
          }}
        </p>

        {{#if this.willOverwriteExisting}}
          <p data-test-state='confirm-overwrite'>
            {{t
              'Manual.Components.This_will_overwrite_your_existing_version_of_'
            }}{{this.themeName}}{{if
              this.willOverwriteExisting.active
              (t 'Manual.Components.,_which_is_your_active_theme.')
            }}{{t 'Manual.Components.._All_custom_changes_will_be_lost.'}}
          </p>
        {{/if}}
      {{/if}}

      {{#if this.installSuccess}}
        {{#if this.hasWarningsOrErrors}}
          <p data-test-state='installed-with-notes'>
            {{t 'Manual.Components.The_theme_'}}
            <strong>"{{this.themeName}}"</strong>
            {{t 'Manual.Components._was_installed_successfully_but_we_detected_some_'}}
            {{if
              this.validationErrors
              (t 'Manual.Components.errors')
              (t 'Manual.Components.warnings')
            }}.
          </p>
        {{else}}
          {{! Installed with no errors }}
          <p data-test-state='installed-no-notes'><strong>{{this.themeName}}</strong>
            {{t
              'Manual.Components.has_been_successfully_installed_and_activated_as_your_theme.'
            }}</p>
        {{/if}}
      {{/if}}

      {{#if this.installError}}
        {{! Outright failure - not found, not a theme, server error, etc }}
        <p data-test-state='failed-error'>{{this.themeName}}{{t
            'Manual.Components._failed_to_install.'
          }}</p>
        <p class='error' data-test-text='install-error'><strong
            class='response'
          >{{this.installError}}</strong></p>
      {{/if}}

      {{#if this.installFailure}}
        {{! Invalid theme }}
        <p data-test-state='failed-invalid'>{{t
            'Manual.Components.This_theme_is_invalid_and_cannot_be_installed._Contact_the_theme_developer.'
          }}</p>
      {{/if}}

      {{#if this.fatalValidationErrors}}
        <div>
          <h2 class='mb0 mt4 f5 fw6'>{{t 'Manual.Components.Fatal_Errors'}}</h2>
          <p class='mb2'>{{t 'Manual.Components.Must-fix_to_install_theme'}}</p>
        </div>

        <ul class='pa0'>
          {{#each this.fatalValidationErrors as |error|}}
            <li class='theme-validation-item theme-fatal-error'>
              <GhThemeErrorLi @error={{error}} />
            </li>
          {{/each}}
        </ul>
      {{/if}}

      {{#if this.validationErrors}}
        <div>
          <h2 class='mb0 mt4 f5 fw6'>{{t 'Manual.Components.Errors'}}</h2>
          <p class='mb2'>{{t 'Manual.Components.Highly_recommended_to_fix,_functionality_'}}
            <strong>{{t 'Manual.Components.could'}}</strong>
            {{t 'Manual.Components._be_restricted'}}</p>
        </div>
        <ul class='pa0'>
          {{#each this.validationErrors as |error|}}
            <li class='theme-validation-item theme-error'>
              <GhThemeErrorLi @error={{error}} />
            </li>
          {{/each}}
        </ul>
      {{/if}}

      {{#if this.validationWarnings}}
        <div>
          <h2 class='mb0 mt4 f5 fw6'>{{t 'Manual.Components.Warnings'}}</h2>
        </div>
        <ul class='pa0'>
          {{#each this.validationWarnings as |error|}}
            <li class='theme-validation-item theme-warning'>
              <GhThemeErrorLi @error={{error}} />
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>

    <div class='modal-footer'>
      <div class='flex items-center justify-between'>
        <button
          class='gh-btn'
          data-test-button='cancel'
          type='button'
          {{on 'click' (fn @close false)}}
        >
          <span>{{if
              (or this.installSuccess this.installFailure)
              (t 'Manual.Components.Close')
              (t 'Manual.Components.Cancel')
            }}</span>
        </button>

        {{#if this.shouldShowInstall}}
          <GhTaskButton
            @disabled={{this.refreshThemesTask.isRunning}}
            @buttonText={{if
              this.willOverwriteExisting
              (t 'Manual.Components.Overwrite')
              (t 'Manual.Components.Install')
            }}
            @runningText={{t 'Manual.Components.Installing'}}
            @successText={{t 'Manual.Components.Installed'}}
            @task={{this.installThemeTask}}
            @unlinkedTask={{true}}
            {{! button will be removed on success so avoid self-cancel warning }}
            @class='gh-btn gh-btn-primary gh-btn-icon'
            data-test-button='confirm-install'
          />
        {{/if}}
      </div>
    </div>
  </div>
</div>