<section class="gh-canvas gh-setting-email">
    <GhCanvasHeader class="gh-canvas-header">
        <h2 class="gh-canvas-title" data-test-screen-title>
            <LinkTo @route="settings">{{t "Manual.Settings.Settings"}}</LinkTo>
            <span>{{svg-jar "arrow-right"}}</span>
            {{t "Manual.Posts.Email_newsletter"}}
        </h2>
        <section class="view-actions">
            <GhTaskButton
                @buttonText="{{t "Manual.Settings.Save"}}"
                @task={{this.saveSettings}}
                @successText="Saved"
                @runningText="Saving"
                @class="gh-btn gh-btn-primary gh-btn-icon"
                {{on-key "cmd+s"}}
                data-test-button="save-members-settings"
            />
        </section>
    </GhCanvasHeader>

    <section class="view-container settings-debug">
        <div class="gh-setting-liquid-section">
            <Settings::Newsletters />
        </div>
    </section>
</section>
